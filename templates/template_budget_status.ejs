<div class="budget component_shadow budget_cir">
  <div class="left_box">
    <h1 class="logo_alphabet h2_medium text_shadow">{%LOGO_ALPHABET%}</h1>
    <div class="right">
      <h4 class="txt h4_medium">{%BUDGET_NAME%}</h4>
      <h5 class="amount h5_medium">
        ${%SPEND_AMOUNT%} spend of ${%BUDGET_AMOUNT%}
      </h5>
    </div>
  </div>

  <div class="right_box">
    <svg width="100" height="100" viewBox="0 0 100 100" class="ellipse">
      <circle
        r="43"
        cx="50"
        cy="50"
        fill="transparent"
        stroke-linecap="round"
        class="circle"></circle>
    </svg>
    <h6 class="percentage h6_medium text_shadow">{%BUDGET_PERCENTAGE%}%</h6>
  </div>
</div>
